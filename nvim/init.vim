set clipboard+=unnamedplus

" no swap file
set noswapfile

noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>

set undofile
set undodir=$HOME/.config/nvim/undo
set undolevels=10000
set undoreload=10000

" tabstop
set softtabstop=4
set shiftwidth=4
set noexpandtab
set autoindent
